{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "obs": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "address": {
          "type": "string",
          "default": "ws://localhost"
        },
        "port": {
          "type": "number",
          "default": 4455
        },
        "sources": {
          "type": "object",
          "properties": {
            "feed1": {
              "type": "string",
              "default": "Player Feed 1"
            },
            "feed2": {
              "type": "string",
              "default": "Player Feed 2"
            },
            "feed3": {
              "type": "string",
              "default": "Player Feed 3"
            },
            "feed4": {
              "type": "string",
              "default": "Player Feed 4"
            }
          }
        }
      }
    }
  },
  "required": [
    "obs"
  ]
}
